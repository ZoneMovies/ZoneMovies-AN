<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mac.zonemovies"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".app.ZoneMoviesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.splash.SplashActivity"
            android:theme="@style/LauncherTheme">
        </activity>
        <activity android:name=".view.onboarding.OnBoardingActivity" />
        <activity android:name=".view.login.LoginActivity" />
        <activity android:name=".view.signup.SignUpActivity" />
        <activity android:name=".view.movie.MovieActivity" />
    </application>

</manifest>